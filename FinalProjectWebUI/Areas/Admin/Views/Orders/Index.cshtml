@model IEnumerable<Orders>
<div class="col-xl-12 col-md-12 col-sm-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Orders</h4>
            <div class="table-responsive">
                <table class="table table-bordered border-primary mb-0">

                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Price</th>
                            <th>Discount Price</th>
                            <th>Costumer</th>
                            
                            <th>Is Approved</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Product.Name</td>
                                <td>@item.Product.Price</td>
                                <td>@item.Total</td>
                                <td>@item.Order.FirstName @item.Order.LastName</td>
                                @if (item.approved == true)
                                {
                                    <td>
                                        <i class="fa-solid fa-check"></i>
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        <i class="fa-solid fa-xmark"></i>
                                    </td>
                                }

                                <td>
                                    @if(item.approved == false)
                                    {
                                        <a asp-action="Approve" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Approve</a>
                                    }
                                    else
                                    {

                                        <a class="btn btn-sm btn-success">Approved</a>
                                    }
                                  
                                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Detail</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Delede</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
