@model List<AppUser>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h3>Üyeler</h3>
<hr />
<table class="table table-bordered table-striped">

    <tr>
        <td>User Id</td>
        <td>User Name</td>
        <td>Email</td>
        <td>Roles</td>
        <td>Give Role</td>
    </tr>
    @if (Model.Count() == 0)
    {

        <tr>
            <td colspan="3">No User</td>
        </tr>
    }
    else
    {
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td user-roles="@item.Id"></td>
                <td><a class="btn btn-success" asp-action="RoleAssign" asp-route-id="@item.Id">To give a role</a> </td>
            </tr>
        }

    }
</table>