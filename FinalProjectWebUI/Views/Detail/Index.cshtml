 @model DetailViewModel  
@{
    var count = 0;
    var idd = 0;
    var iddd = 0;
}
 <main>
      <section id="product">
        <div class="container">
          <div class="row d-flex align-items-start">
            <div class="col-sm-12 col-md-12 col-lg-3 col-xl-3 first-col">
                    @foreach (var item in Model.Product.ProductImages)
                    {
                        <img src="/assets/img/@item.ImagePath" class="first-image" alt="" style="height: 250px; object-fit:contain;" />
                    }
            </div>
            <div class="col-sm-12 col-md-12 col-lg-5 col-xl-5 second-col">
              <div
                id="carouselExampleControls"
                class="carousel slide"
                data-bs-ride="carousel"
              >
                <div class="carousel-inner">
                            @foreach (var item in Model.Product.ProductImages)
                            {
                                count++;
                                @if(count == 1)
                                {
                                    <div class="carousel-item active">
                                        <img src="/assets/img/@item.ImagePath" class="d-block w-100" alt="..." />
                                    </div>
                                }
                                else
                                {

                                    <div class="carousel-item">
                                        <img src="/assets/img/@item.ImagePath" class="d-block w-100" alt="..." />
                                    </div>
                                }

                            }
            
                </div>
                <button
                  class="carousel-control-prev"
                  type="button"
                  data-bs-target="#carouselExampleControls"
                  data-bs-slide="prev"
                >
                  <span class="carousel-control" aria-hidden="true"
                    ><i class="fa-solid fa-chevron-left"></i
                  ></span>
                  <span class="visually-hidden">Previous</span>
                </button>
                <button
                  class="carousel-control-next"
                  type="button"
                  data-bs-target="#carouselExampleControls"
                  data-bs-slide="next"
                >
                  <span class="carousel-control" aria-hidden="true"
                    ><i class="fa-solid fa-chevron-right"></i
                  ></span>
                  <span class="visually-hidden">Next</span>
                </button>
              </div>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-4 col-xl-4 third-col">
              <section
                id="main-info"
                class="d-flex align-items-baseline justify-content-between"
              >
                <p>@Model.Product.Name</p>
                <div class="two-icons d-flex align-items-baseline">
                  <button class="btn d-flex align-items-center">
                    <img
                      src="/assets/images/Iconsax/Linear/circle.png"
                      alt=""
                    />
                  </button>
                  <button class="btn d-flex align-items-center ms-3">
                    <i class="fa-regular fa-heart"></i>
                  </button>
                </div>
              </section>
              <section id="price-other">
                        <p>@Model.Product.Price$</p>
                

               <div class="size-info d-flex justify-content-between align-items-baseline" >
                  <p>color</p>
                  <button class="btn">color chart</button>
                </div>
                <div class="sizes d-flex justify-content-between">
                            @foreach (var item in Model.ProductColorSizeCount)
                            {
                                if(item.ProductId == Model.Product.Id && item.ColorId != idd)
                                {
                                    idd = item.ColorId;
                                    <button class="btn">@item.Color.Name</button>
                                }
                            
               }
                 
                </div>


                <div class="size-info d-flex justify-content-between align-items-baseline" >
                            <p>size</p>
                            <button class="btn">size chart</button>
                        </div>
                        <div class="sizes d-flex justify-content-between">
                            @foreach (var item in Model.ProductColorSizeCount)
                            {
                                if (item.ProductId == Model.Product.Id && item.SizeId != idd)
                                {
                                    iddd = item.SizeId;
                                    <button class="btn">@item.Size.Name</button>
                                }
                            }

                        </div>
              </section>
              <section id="description">
                <div class="accordion-panel">
                  <button class="accordion">Description</button>
                  <div class="panel">
                    <p>@Model.Product.Name</p>
                    <ul class="list">
                      <li class="d-flex align-items-center">
                        <i class="fa-solid fa-circle me-2"></i> @Model.Product.Description
                      </li>

                    </ul>
                  </div>
                </div>
               
              </section>
              <section id="last-btns" class="d-flex flex-column">
                        <a asp-controller="home" asp-action="addtocart" asp-route-id="@Model.Product.Id" class="btn bag d-flex align-items-center justify-content-between">
                  ADD TO BAG
                  <img src="/assets/images/shoppingbag.png" alt="" />
                </a>
              </section>
            </div>
          </div>
        </div>
      </section>
      <section id="also-like">
        <div class="container">

        </div>
      </section>
      <section id="balmain-logo">
        <div class="container-fluid">
          <div class="row">
            <div class="col d-flex justify-content-center align-items-center">
              <a href=""><img src="~/assets/images/balmain.png" alt="" /></a>
            </div>
          </div>
        </div>
      </section>
    </main>