@model RegisterFormModel
<main>
    <section id="main">
        <div class="container">
            <div class="row d-flex align-items-center">
                <div class="first-col col-sm-12 col-md-12 col-lg-6 col-xl-6 d-flex justify-content-start">
                    <form asp-action="register" method="post" style="width: 100%;">
                        <div class="log-form d-flex flex-column" style="width: 100%;">

                            <div class="name-gr d-flex justify-content-between" style="margin-top: 2%;">
                                <input type="text" asp-for="Name" id="name" placeholder="Name" style="width: 100%;">
                            </div>
                             <div class="name-gr d-flex justify-content-between" style="margin-top: 2%;">
                                <input type="text" asp-for="Surname" id="name" placeholder="Surname" style="width: 100%;">
                            </div>
                            <div class="name-gr d-flex justify-content-between" style="margin-top: 2%;">
                                <input type="text" asp-for="UserName" id="name" placeholder="Username" style="width: 100%;">
                            </div>
                            <div class="name-gr d-flex justify-content-between" style="margin-top: 2%;">
                                <input type="text" asp-for="Email" id="name" placeholder="Email" style="width: 100%;">
                            </div>
                              <div class="name-gr d-flex justify-content-between" style="margin-top: 2%;">
                                <input type="text" asp-for="Password" id="name" placeholder="Password" style="width: 100%;">
                            </div>
                            <div class="name-gr d-flex justify-content-between" style="margin-top: 2%;">
                                <input type="text" asp-for="PasswordConfirm" id="name" placeholder="Password Confirm" style="width: 100%;">
                            </div>
          


                            <input type="submit" class="btn loginbtn" value="Sign Up" style="margin-top: 2%;" />
                        </div>
                    </form>
                </div>
                <div class="imgcol col-sm-12 col-md-12 col-lg-6 col-xl-6 d-flex justify-content-end">
                    <img draggable="false" src="/assets/images/redlog.png" alt="" />
                </div>
            </div>
        </div>
    </section>
    <section id="balmain-logo">
        <div class="container-fluid">
            <div class="row">
                <div class="col d-flex justify-content-center align-items-center">
                    <a href=""><img src="/assets/images/balmain.png" alt="" /></a>
                </div>
            </div>
        </div>
    </section>
</main>