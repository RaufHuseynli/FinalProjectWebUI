@model CheckFormModel
@section addcss{

    <link rel="stylesheet" href="~/assets/css/login.min.css" />
    <link rel="stylesheet" href="/assets/css/shoppingbag.min.css" />
}
@{
    var total = 0;
    var discount = 0;
}
<main>
    <section id="main-bag">
        <div class="text-cont container d-flex align-items-baseline">
            <h3>shopping bag</h3>
            <p>(@Model.Products.Count() items)</p>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-8 col-xl-8 shop">
                    @foreach(var item in Model.Products)
                    {
                        total = total + (int)item.Price;
                        discount = discount + (int)item.Discount;
                        <div class="product-container d-flex align-items-center mt-3">
                            <div class="image-container">
                                <a href="">
                                    <img src="~/assets/img/@item.ImagePath" alt="" />
                                </a>
                            </div>
                            <div class="rest-container">
                                <div class="name-price d-flex align-items-center justify-content-between">
                                    <h5>
                                      @item.Name
                                    </h5>
                                    <p>@item.Price$</p>
                                </div>
                                <div class="info-qty d-flex align-items-center justify-content-between">
                                   
                                </div>
                                <div class="edit-remove d-flex align-items-baseline justify-content-between">

                                </div>
                            </div>
                        </div>
                    }


                </div>
                <div class="col-sm-12 col-md-12 col-lg-4 col-xl-4 checkout">
                    <section id="summary">
                        <h5>order summary</h5>
                        <div class="subtotal d-flex align-items-center justify-content-between">
                            <p>subtotal</p>
                            <p class="price">@total$</p>
                        </div>
                        <div class="shipping d-flex align-items-center justify-content-between">
                            <p>discount Percent</p>
                            <p class="price">@(discount / Model.Products.Count())%</p>
                        </div>

                        <div class="shipping d-flex align-items-center justify-content-between">
                        <p class="tax">TAX CALCULATED IN CHECKOUT</p>
                        <p class="price">@(total-(total*(discount/Model.Products.Count())/100))$</p>
                        </div>

                        <div class="shipping d-flex align-items-center justify-content-between">
                        <form asp-action="index" method="post" style="width: 100%;">
                                @foreach (var item in Model.Products)
                                {
                                    <input type="hidden" asp-for="ProductId" value="@item.Id" />

                                }
                                <input asp-for="Order.FirstName" placeholder="FirstName" required type="text" style="width:100%; padding: 2% 3%; border-radius: 25px; margin: 2% 0%; border: 1px solid #0000007a;" />
                                <input asp-for="Order.LastName" placeholder="LastName" required type="text" style="width:100%; padding: 2% 3%; border-radius: 25px; margin: 2% 0%; border: 1px solid #0000007a;" />
                                <input asp-for="Order.Email" placeholder="Email" required type="text" style="width:100%; padding: 2% 3%; border-radius: 25px; margin: 2% 0%; border: 1px solid #0000007a;" />
                                <input asp-for="Order.Phone" placeholder="Phone" required type="text" style="width:100%; padding: 2% 3%; border-radius: 25px; margin: 2% 0%; border: 1px solid #0000007a;" />
                                <input asp-for="Order.Country" placeholder="Country" required type="text" style="width:100%; padding: 2% 3%; border-radius: 25px; margin: 2% 0%; border: 1px solid #0000007a;" />
                                <input asp-for="Order.State" placeholder="State" required type="text" style="width:100%; padding: 2% 3%; border-radius: 25px; margin: 2% 0%; border: 1px solid #0000007a;" />
                                <input asp-for="Order.City" placeholder="City" required type="text" style="width:100%; padding: 2% 3%; border-radius: 25px; margin: 2% 0%; border: 1px solid #0000007a;" />
                                <input asp-for="Order.Region" placeholder="Region" required type="text" style="width:100%; padding: 2% 3%; border-radius: 25px; margin: 2% 0%; border: 1px solid #0000007a;" />
                                <input asp-for="Order.Street" placeholder="Street" required type="text" style="width:100%; padding: 2% 3%; border-radius: 25px; margin: 2% 0%; border: 1px solid #0000007a;" />
                                <input asp-for="Order.House" placeholder="House" required type="text" style="width:100%; padding: 2% 3%; border-radius: 25px; margin: 2% 0%; border: 1px solid #0000007a;" />
                                <input asp-for="Order.PostalCode" placeholder="PostalCode" required type="text" style="width:100%; padding: 2% 3%; border-radius: 25px; margin: 2% 0%; border: 1px solid #0000007a;" />
                                <input asp-for="Order.CardNumber" placeholder="CardNumber" required type="text" style="width:100%; padding: 2% 3%; border-radius: 25px; margin: 2% 0%; border: 1px solid #0000007a;" />
                                <input asp-for="Order.CardCVV" placeholder="CardCVV" required type="text" style="width:100%; padding: 2% 3%; border-radius: 25px; margin: 2% 0%; border: 1px solid #0000007a;" />
                                <input asp-for="Order.ExpirationYear" placeholder="ExpirationYear" required type="text" style="width:100%; padding: 2% 3%; border-radius: 25px; margin: 2% 0%; border: 1px solid #0000007a;" />
                                <input asp-for="Order.ExpirationMonth" placeholder="ExpirationMonth" required type="text" style="width:100%; padding: 2% 3%; border-radius: 25px; margin: 2% 0%; border: 1px solid #0000007a;" />

                                <input type="submit" class="btn btn-dark border-5" style=" border-radius: 6px; margin-top: 2%;" />
                        </form>
