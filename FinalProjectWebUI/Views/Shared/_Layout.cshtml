</head>
<body>
    @await Component.InvokeAsync("Header", new{categorystore = ViewBag.Categorystore})
@RenderBody()
    @await Component.InvokeAsync("Footer", new{categorystore = ViewBag.Categorystore})
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.3/jquery.min.js"
            integrity="sha512-STof4xm1wgkfm7heWqFJVn58Hm3EtS31XFaagaa8VMReCXAkQnJZ+jEy8PCC/iT18dFy95WcExNHFTqLyp72eQ=="
            crossorigin="anonymous"
            referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"
            integrity="sha512-bPs7Ae6pVvhOSiIcyUClR7/q2OAsRiovw4vAkX+zJbw3ShAeeqezq50RIIcIURq7Oa20rW2n2q+fyXBNcU9lrw=="
            crossorigin="anonymous"
            referrerpolicy="no-referrer"></script>
    <script src="~/assets/js/index.js"></script>
    <script src="/assets/js/accordion.js"></script>
    <script>
                $('.basket-btn').click(function (z) {
            z.preventDefault();
            var id = $(this).data('id');

            $.ajax({
                type: 'Get',
                url: `/home/AddToCart/${id}`,
                success: function (response) {
                    if (response.error == false) {

                        var txt = $('#basket-cart').text();
                        var txt = parseInt(txt);
                        txt = txt + 1;
                        $('#basket-cart').text(txt);

                    }
                }

            });
        })

        $(document).on('change', '#price-max', function () {

            $('#price-max').val(`${$(this).val()}`);
            $('#amount').text(`Max price: ${$(this).val()}`);
        });
        $('.select-menu').mouseover(function () {
            $(".expand-menu").css("display", "block")
        })
        $('.expand-menu').mouseover(function () {
            $(".expand-menu").css("display", "block")
        })
        $('.expand-menu').mouseleave(function () {
            $(".expand-menu").css("display", "none")
        })
        $('.select-menu').mouseleave(function () {
            $(".expand-menu").css("display", "none")
        })


                $('.select-menu1').mouseover(function () {
            $(".expand-menu1").css("display", "block")
        })
        $('.expand-menu1').mouseover(function () {
            $(".expand-menu1").css("display", "block")
        })
        $('.expand-menu1').mouseleave(function () {
            $(".expand-menu1").css("display", "none")
        })
        $('.select-menu1').mouseleave(function () {
            $(".expand-menu1").css("display", "none")
        })
    </script>
    @RenderSection("addjs", false)
</body>
</html>
